{
  "name": "117-seguridad-industrial-web",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "prisma generate && node node_modules/vite/bin/vite.js build && tsc --project tsconfig.server.json",
    "typecheck": "node node_modules/typescript/bin/tsc --noEmit",
    "preview": "vite preview",
    "start": "node dist-server/index.js",
    "server": "nodemon --watch server --exec tsx server/index.ts",
    "dev:full": "concurrently \"npm run dev\" \"npm run server\"",
    "db:migrate": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:seed": "tsx server/seed.ts"
  },
  "prisma": {
    "seed": "tsx ./server/seed.ts"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^7.1.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-ga4": "^2.1.0",
    "react-router-dom": "^6.27.0",
    "serve": "^14.2.5",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@prisma/client": "^5.22.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.3",
    "@types/react": "^18.3.8",
    "@types/react-dom": "^18.3.2",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.11",
    "prisma": "^5.22.0",
    "tsx": "^4.21.0",
    "typescript": "^5.6.3",
    "vite": "^5.0.12"
  },
  "engines": {
    "node": ">=18"
  }
}
